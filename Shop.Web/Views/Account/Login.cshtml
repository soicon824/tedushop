@model Shop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>REGISTERED CUSTOMERS</h3>
        <p>If you have an account with us, please log in.</p>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div class="alert danger">@Html.ValidationSummary()</div>
            <div>
                <span>User name<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password)
            </div>
            <div>
                <span>Remember me</span>
                @Html.CheckBoxFor(model => model.RememberMe)
            </div>
            <a class="forgot" href="#">Forgot Your Password?</a>
            <input type="submit" value="Login">
        }
    </div>
    <div class=" login-left">
        <h3>NEW CUSTOMERS</h3>
        <p>By creating an account with our store,
        you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
        <a class="acount-btn" href="/dang-ky.html">Create an Account</a>
    </div>
    <div class="clearfix"> </div>
</div>

