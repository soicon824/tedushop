@model Shop.Web.Infrastructure.Core.PaginationSet<Shop.Web.Models.ProductViewModel>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/Layouts.cshtml";
    var category = (Shop.Web.Models.ProductCategoryViewModel)ViewBag.Category;
}

<div class="women-product">
    @if (Model.Count > 0)
    {
        <div class="w_content">
            <div class="women">
                <a href="/@(category.Alias).pc-@(category.ID).html"><h4>@category.Name - <span>@Model.TotalCount itemms</span> </h4></a>
                <ul class="w_nav">
                    <li>Sort : </li>
                    <li><a class="active" href="?page=@Model.Page&sortBy=popular">popular</a></li> |
                    <li><a href="?page=@Model.Page&sortBy=new">new </a></li> |
                    <li><a href="?page=@Model.Page&sortBy=discount">discount</a></li> |
                    <li><a href="?page=@Model.Page&sortBy=price">price: Low High </a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
        </div>
        <!-- grids_of_4 -->
        <div class="grid-product">
            @foreach (var product in Model.Items)
            {
                var url = "/" + product.Alias + ".p-" + product.ID + ".html";

                <div class="product-grid">
                    <div class="content_box">
                        <div class="left-grid-view grid-view-left">
                            <a href="@url">
                                <img src="@product.Image" class="img-responsive watch-right" alt="@product.Name">
                                <div class="mask">
                                    <div class="info">Quick View</div>
                                </div>
                            </a>
                        </div>
                        <h4><a href="@url">@product.Name</a></h4>
                        <p>@product.Description</p>
                        @(product.Price == 0 ? "Lien he" : product.Price.ToString("N2"))
                    </div>
                </div>
            }

            <div class="clearfix"> </div>
            @if (Model.TotalPages > 1)
            {
                var startPageIndex = Math.Max(1, Model.Page - (Model.MaxPage / 2));
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + (Model.MaxPage / 2));
                <nav>
                    <ul class="pagination">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item"><a class="page-link" href="?page=1">First</a></li>
                            <li class="page-item"><a class="page-link" href="?page=@(Model.Page-1)">Previous</a></li>
                        }
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            <li class="page-item">
                                <a class="page-link @(Model.Page ==i?"active":"")" href="?page=@i">@i</a>
                            </li>
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li class="page-item"><a class="page-link" href="?page=@(Model.Page+1)">Next</a></li>
                            <li class="page-item"><a class="page-link" href="?page=@(Model.TotalPages)">Last</a></li>
                        }
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        <Div class="text-center">Khong co san pham nao</Div>
    }

</div>
